# HON Automated Reporting - Production Environment Variables
# Copy this to Render dashboard under Environment Variables

# ===== APPLICATION SETTINGS =====
ENVIRONMENT=production
DEBUG_MODE=false
PORT=10000

# ===== META ADS API =====
META_ACCESS_TOKEN=your_meta_access_token_here
META_ACCOUNT_ID=your_meta_account_id_here
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# ===== GOOGLE ADS API =====
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CUSTOMER_ID=1234567890
GOOGLE_OAUTH_CLIENT_ID=your_oauth_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
GOOGLE_OAUTH_REFRESH_TOKEN=your_refresh_token_here
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_manager_account_id_here

# ===== TIKTOK ADS API =====
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_APP_ID=your_tiktok_app_id_here
TIKTOK_SECRET=your_tiktok_secret_here

# ===== SUPABASE DATABASE =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# ===== CORS CONFIGURATION =====
# This will be automatically configured based on ENVIRONMENT=production
# Uncomment and update after getting your Netlify URL:
# ALLOWED_ORIGINS=https://your-netlify-site.netlify.app